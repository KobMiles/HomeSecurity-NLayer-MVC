@section Scripts {
    <script>
        function buildTableRows(sensors) {
            return sensors.map(s => {
                const badge = s.isAlert
                    ? '<span class="badge bg-danger">Тривога</span>'
                    : '<span class="badge bg-success">Норма</span>';
                return `
                    <tr>
                        <td class="col-name">${s.name}</td>
                        <td class="col-location">${s.locationName}</td>
                        <td class="col-label">${s.dataLabel}</td>
                        <td class="col-value">${s.data}</td>
                        <td class="col-alert text-center">${badge}</td>
                    </tr>`;
            }).join('');
        }

        function updateSensors() {
            fetch('/Home/GetSensors')
                .then(response => response.json())
                .then(data => {
                    const selectedLocation = document.querySelector('#locationFilter').value;

                    if (selectedLocation) {
                        data = data.filter(x => x.locationName === selectedLocation);
                    }

                    const glassBreakRows = buildTableRows(data.filter(x => x.sensorType === 0));
                    const doorRows = buildTableRows(data.filter(x => x.sensorType === 1));
                    const motionRows = buildTableRows(data.filter(x => x.sensorType === 2));
                    const videoRows = buildTableRows(data.filter(x => x.sensorType === 3));

                    // Оновлення для вкладки "Всі датчики"
                    document.querySelector('#glassBreakTableAll tbody').innerHTML = glassBreakRows;
                    document.querySelector('#doorTableAll tbody').innerHTML = doorRows;
                    document.querySelector('#motionTableAll tbody').innerHTML = motionRows;
                    document.querySelector('#videoDoorbellTableAll tbody').innerHTML = videoRows;

                    // Оновлення для окремих вкладок
                    document.querySelector('#glassBreakTable tbody').innerHTML = glassBreakRows;
                    document.querySelector('#doorTable tbody').innerHTML = doorRows;
                    document.querySelector('#motionTable tbody').innerHTML = motionRows;
                    document.querySelector('#videoDoorbellTable tbody').innerHTML = videoRows;
                })
                .catch(err => console.error('Помилка при оновленні сенсорів:', err));
        }

        setInterval(updateSensors, 7000);
        document.addEventListener("DOMContentLoaded", () => {
            updateSensors();
            // Оновлення при зміні фільтра за локацією
            document.querySelector('#locationFilter').addEventListener('change', updateSensors);
        });
    </script>
}
