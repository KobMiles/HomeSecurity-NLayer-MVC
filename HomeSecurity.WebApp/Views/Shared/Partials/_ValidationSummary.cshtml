@{
    var hasErrors = ViewData.ModelState?.Values.Any(v => v.Errors.Any()) ?? false;
}

@if (hasErrors)
{
    <div class="custom-error-alert animate__animated animate__fadeIn" role="alert">
        <div class="error-header">
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="24"
                 height="24"
                 fill="currentColor"
                 viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zM7.002 11a1 1 0 1 1 2.001 0 1 1 0 0 1-2.001 0z" />
                <path d="M7.1 4.995c-.058-.533.356-.995.9-.995s.958.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0l-.35-3.507z" />
            </svg>
            <strong>Please fix the following errors:</strong>
        </div>
        <ul>
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}